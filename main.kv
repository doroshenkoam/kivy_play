#:kivy 1.1


<MainMenu>
    BoxLayout:
        orientation: "vertical"
        padding: 50
        spacing: 10
        canvas:
            Color:
                rgb: (0.15, 0.93, 0.93)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: game_name
            text: "SURVIVAL"
            font_size: 2*self.height
            color: 0.8,0,0,1
            pos_hint: {"center_x":0.5, "top":1}


        Button:
            size_hint: 0.7,1
            pos_hint: {"center_x":0.5}
            background_color: 1,2,1,1
            text: "START GAME"
            font_size: self.height
            color: 255,0,0,1

            on_release:
                root.manager.current = "start_game"
        
        Button:
            size_hint: 0.7,1
            pos_hint: {"center_x":0.5}
            background_color: 1,2,1,1
            text: "TOP SCORES"
            font_size: self.height
            color: 255,0,0,1

            on_release:
                self.text = "In developing"

        Button:
            size_hint: 0.7,1
            pos_hint: {"center_x":0.5}
            background_color: 1,2,1,1
            text: "SETTINGS"
            font_size: self.height
            color: 255,0,0,1

            on_release:
                self.text = "In developing"

        Button:
            size_hint: 0.7,1
            pos_hint: {"center_x":0.5}
            background_color: 1,2,1,1
            text: "ABOUT"
            font_size: self.height
            color: 255,0,0,1

            on_release:
                root.manager.current = "about"

        Button:
            size_hint: 0.7,1
            pos_hint: {"center_x":0.5}
            background_color: 1,2,1,1
            text: "CREATORS"
            font_size: self.height
            color: 255,0,0,1

            on_release:
                root.manager.current = "creators"


<Creators>:
    BoxLayout:
        orientation: "vertical"
        padding: 50
        spacing: 10
        canvas:
            Color:
                rgb: (0.15, 0.93, 0.93)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: developers
            text: "Developers:"
            font_size: self.height
            color: 255,0,0,1

        Label:
            id: developer1
            text: "Doroshenko Aleksey"
            font_size: self.height
            color: 255,0,0,1
        
        Label:
            id: developer2
            text: "Sharshakov Dmitriy Jn"
            font_size: self.height
            color: 255,0,0,1
        
        Label:
            id: grafic_arts
            text: "Grafic arts:"
            font_size: self.height
            color: 255,0,0,1
        
        Label:
            id: grafic_arts
            text: "Franzi Anastasia"
            font_size: self.height
            color: 255,0,0,1
        
        Button:
            size_hint: 0.7,1
            pos_hint: {"center_x":0.5}
            background_color: 1,2,1,1
            text: "BACK"
            font_size: self.height
            color: 255,0,0,1

            on_release:
                root.manager.current = "menu"

<About>:
    BoxLayout:
        orientation: "vertical"
        padding: 50
        spacing: 10
        canvas:
            Color:
                rgb: (0.15, 0.93, 0.93)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            id: preview
            size_hint : 0.7,0.2
            pos_hint: {"center_x":0.5}
            text: "About game:"
            font_size: 0.7*self.height
            color: 255,0,0,1

        Label:
            id: description
            text: "This game is still a prototype\nfor survival. The character finds himself\nin a territory surrounded by enemies\nand tries to somehow hold out until dawn."
            font_size: 0.11*self.height
            color: 255,0,0,1

        Button:
            size_hint: 0.7,0.2
            pos_hint: {"center_x":0.5}
            background_color: 1,2,1,1
            text: "BACK"
            font_size: self.height
            color: 255,0,0,1

            on_release:
                root.manager.current = "menu"

<StartGame>:
    label_time: label_time

    FloatLayout:
        canvas:
            Color:
                rgb: (0.15, 0.93, 0.93)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint: 0.3,1.5

            Button:
                id: left
                size_hint: 0.1,0.1
                opacity: 0.25
                text: "LEFT"
                font_size: 0.4*self.height
                color: 255,0,0,1
            Button:
                id: right
                size_hint: 0.1,0.1
                opacity: 0.25
                text: "RIGHT"
                font_size: 0.4*self.height
                color: 255,0,0,1

        BoxLayout:
            size_hint: 0.15,1.5
            pos_hint: {"right":1}

            Button:
                id: action
                size_hint: 0.1,0.1
                opacity: 0.25
                text: "ACTION"
                font_size: 0.4*self.height
                color: 255,0,0,1

        BoxLayout:
            orientation: "vertical"
            size_hint: 1.5,0.15
            pos_hint: {"top":1, "right":1}

            Button:
                id: action
                size_hint: 0.1,0.1
                opacity: 0.25
                text: "EXIT"
                font_size: 0.4*self.height
                color: 255,0,0,1
                pos_hint: {"top":1, "right":1}

                on_release:
                    root.manager.current = "menu"

        Label:
            id: label_time
            pos_hint: {"top":1.45, "center_x":0.1}
            font_size: self.height * 0.05
            color: 0.8,0,0,1
